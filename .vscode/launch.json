{
    "version": "0.2.0",
    "configurations": [
       {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest: Debug Current Test File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-k", "${fileBasenameNoExtension}", "-q"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "src"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest (all)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-q"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "src"
            },
            "console": "integratedTerminal"
        }
    ]
}